pipeline {

    agent any

    stages {
        stage ('Complie Stage') {
            steps {
                withGradle(gradle : 'Gradle 5.4') {
                    sh 'gradle clean build'
                 }
            }
        }

        stage ('Testing Stage') {
            steps {
                withGradle(gradle : 'Gradle 5.4') {
                    sh 'gradle test'
                }

            }
        }


        stage ('Deploy Stage') {
            steps {
                withGradle(gradle : 'Gradle 5.4') {
                    sh 'gradle deploy'
                }
            }
        }
    }
}